<%= form_for(@villa) do |f| %>
  <% if @villa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@villa.errors.count, "error") %> Price can't be saved:</h2>

      <ul>
      <% @villa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :basic_price %><br>
    <%= f.text_field :basic_price %>
  </div>
  <div class="field">
    <%= f.label :extra_price %><br>
    <%= f.text_field :extra_price %>
  </div>
  <div class="field">
    <%= f.label :discount %><br>
    <%= f.text_field :discount %>
  </div>
  <div class="field">
    <%= f.label :service %><br>
    <%= f.text_field :service %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
