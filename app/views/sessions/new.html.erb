<div class="container">
    <h1>Log in</h1>
    <div class="form-group row">
        <%= form_tag '/login' do %>

        <%= label_tag :email %>
        <%= text_field_tag :email %>

        <%= label_tag :password %>
        <%= password_field_tag :password %>

        <%= submit_tag "Submit" %>
        <% end %>
    </div>
</div>
